language ESSENCE 1.0.0

given bignum : int(1..)
given n_vertices : int(1..)

letting VERTEX be domain int(1..n_vertices)

given G : set (maxsize bignum) of set (size 2) of VERTEX

find Sub : set (maxsize bignum) of VERTEX

maximising card(Sub)

such that
    forall v_1 : Sub .
        forall v_2 : Sub .
            (v_1 != v_2) => (set {v_1,v_2} elem G)
