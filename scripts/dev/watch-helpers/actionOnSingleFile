#/bin/sh

echo "\033[36m"                 # set the colour to cyan
echo "[ ===== $1 ===== ]"
echo "\033[0m"                  # reset the colour

# if given a second argument, only show that many lines.

if [ $# -eq 2 ]
then
    ( scripts/dev/watch-helpers/hlintOnSingleFile $1 2>&1
      scripts/dev/watch-helpers/ghcOnSingleFile   $1 2>&1 ) | head -n $2
else
    ( scripts/dev/watch-helpers/hlintOnSingleFile $1 2>&1
      scripts/dev/watch-helpers/ghcOnSingleFile   $1 2>&1 )
fi

echo "[Finished] $1"

