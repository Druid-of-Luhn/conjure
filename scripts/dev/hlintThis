#/bin/sh

pragmas=$(cat <<EOF
-i 'Unused LANGUAGE pragma'
EOF
)

hlintCommand="hlint $pragmas $1"
hlintCommandC="echo [ ===== $1 ===== ] ; hlint -c $pragmas $1"

! [[ $(eval $hlintCommand) = "No suggestions"* ]] && eval $hlintCommandC
[[ $(eval $hlintCommand) = "No suggestions"* ]] && echo "OK: $1"

