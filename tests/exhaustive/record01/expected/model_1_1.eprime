language ESSENCE' 1.0

find x_ExplicitVarSizeWithMarker_Marker: int(0..6)
find x_ExplicitVarSizeWithMarker_Values_isEven:
        matrix indexed by [int(1..6)] of bool
find x_ExplicitVarSizeWithMarker_Values_theVal:
        matrix indexed by [int(1..6)] of int(1..3)
such that
    and([q2 <= x_ExplicitVarSizeWithMarker_Marker ->
         (x_ExplicitVarSizeWithMarker_Values_theVal[q2] % 2 = 0 <->
          x_ExplicitVarSizeWithMarker_Values_isEven[q2])
             | q2 : int(1..6)]),
    and([q1 + 1 <= x_ExplicitVarSizeWithMarker_Marker ->
         x_ExplicitVarSizeWithMarker_Values_isEven[q1] <
         x_ExplicitVarSizeWithMarker_Values_isEven[q1 + 1]
         \/
         x_ExplicitVarSizeWithMarker_Values_isEven[q1] =
         x_ExplicitVarSizeWithMarker_Values_isEven[q1 + 1]
         /\
         x_ExplicitVarSizeWithMarker_Values_theVal[q1] <
         x_ExplicitVarSizeWithMarker_Values_theVal[q1 + 1]
             | q1 : int(1..5)]),
    and([q1 > x_ExplicitVarSizeWithMarker_Marker ->
         x_ExplicitVarSizeWithMarker_Values_isEven[q1] = false /\
         x_ExplicitVarSizeWithMarker_Values_theVal[q1] = 1
             | q1 : int(1..6)])

