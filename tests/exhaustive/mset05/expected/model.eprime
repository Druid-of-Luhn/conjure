language ESSENCE' 1.0

find x_ExplicitVarSizeWithFlags_Flags:
        matrix indexed by [int(1..4)] of int(0..2)
find x_ExplicitVarSizeWithFlags_Values:
        matrix indexed by [int(1..4)] of int(1..2)
such that
    and([x_ExplicitVarSizeWithFlags_Flags[q1 + 1] > 0 ->
         x_ExplicitVarSizeWithFlags_Values[q1] <
         x_ExplicitVarSizeWithFlags_Values[q1 + 1]
             | q1 : int(1..3)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q2] = 0 ->
         x_ExplicitVarSizeWithFlags_Values[q2] = 1
             | q2 : int(1..4)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q3 + 1] > 0 ->
         x_ExplicitVarSizeWithFlags_Flags[q3] > 0
             | q3 : int(1..3)]),
    2 <= sum([x_ExplicitVarSizeWithFlags_Flags[q5] | q5 : int(1..4)]),
    sum([x_ExplicitVarSizeWithFlags_Flags[q5] | q5 : int(1..4)]) <= 4

