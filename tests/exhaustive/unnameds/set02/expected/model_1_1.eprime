language ESSENCE' 1.0

given n: int
find s_Occurrence: matrix indexed by [int(1..n)] of bool
such that
    and([[s_Occurrence[q3]
              | q2 : int(1..n), q3 : int(1..n), q2 = q1 -> q3 = q1 + 1,
                q2 = q1 + 1 -> q3 = q1, q2 != q1 /\ q2 != q1 + 1 -> q3 = q2]
         <=lex [s_Occurrence[q2] | q2 : int(1..n)]
             | q1 : int(1..n - 1)])

