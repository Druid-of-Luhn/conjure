language ESSENCE' 1.0

given n: int
find s_ExplicitWithFlags_Flags:
        matrix indexed by [int(1..2 * (1 + (n - 1)))] of int(0..2)
find s_ExplicitWithFlags_Values:
        matrix indexed by [int(1..2 * (1 + (n - 1)))] of int(1..n)
find s_ExplicitWithRepetition_Flag: int(0..2 * (1 + (n - 1)) * 2)
find s_ExplicitWithRepetition_Values:
        matrix indexed by [int(1..2 * (1 + (n - 1)) * 2)] of int(1..n)
such that
    and([[sum([toInt(s_ExplicitWithFlags_Values[q23] = q3) *
               s_ExplicitWithFlags_Flags[q23]
                   | q23 : int(1..2 * (1 + (n - 1)))])
              | q2 : int(1..n), q3 : int(1..n), q2 = q1 -> q3 = q1 + 1,
                q2 = q1 + 1 -> q3 = q1, q2 != q1 /\ q2 != q1 + 1 -> q3 = q2]
         <=lex
         [sum([toInt(s_ExplicitWithFlags_Values[q24] = q2) *
               s_ExplicitWithFlags_Flags[q24]
                   | q24 : int(1..2 * (1 + (n - 1)))])
              | q2 : int(1..n)]
             | q1 : int(1..n - 1)]),
    and([s_ExplicitWithFlags_Flags[q1 + 1] > 0 ->
         s_ExplicitWithFlags_Values[q1] < s_ExplicitWithFlags_Values[q1 + 1]
             | q1 : int(1..2 * (1 + (n - 1)) - 1)]),
    and([s_ExplicitWithFlags_Flags[q2] = 0 -> s_ExplicitWithFlags_Values[q2] = 1
             | q2 : int(1..2 * (1 + (n - 1)))]),
    and([s_ExplicitWithFlags_Flags[q3 + 1] > 0 -> s_ExplicitWithFlags_Flags[q3] > 0
             | q3 : int(1..2 * (1 + (n - 1)) - 1)]),
    and([q7 + 1 <= s_ExplicitWithRepetition_Flag ->
         s_ExplicitWithRepetition_Values[q7] <= s_ExplicitWithRepetition_Values[q7 + 1]
             | q7 : int(1..2 * (1 + (n - 1)) * 2 - 1)]),
    and([q8 > s_ExplicitWithRepetition_Flag ->
         s_ExplicitWithRepetition_Values[q8] = 1
             | q8 : int(1..2 * (1 + (n - 1)) * 2)]),
    and([q10 <= s_ExplicitWithRepetition_Flag ->
         sum([toInt(q13 <= s_ExplicitWithRepetition_Flag) *
              toInt(s_ExplicitWithRepetition_Values[q13] =
                    s_ExplicitWithRepetition_Values[q10])
                  | q13 : int(1..2 * (1 + (n - 1)) * 2)])
         <= 2
             | q10 : int(1..2 * (1 + (n - 1)) * 2)]),
    and([q15 <= s_ExplicitWithRepetition_Flag ->
         sum([toInt(q18 <= s_ExplicitWithRepetition_Flag) *
              toInt(s_ExplicitWithRepetition_Values[q18] =
                    s_ExplicitWithRepetition_Values[q15])
                  | q18 : int(1..2 * (1 + (n - 1)) * 2)])
         =
         sum([toInt(s_ExplicitWithFlags_Values[q16] =
                    s_ExplicitWithRepetition_Values[q15])
              * s_ExplicitWithFlags_Flags[q16]
                  | q16 : int(1..2 * (1 + (n - 1)))])
             | q15 : int(1..2 * (1 + (n - 1)) * 2)]),
    and([s_ExplicitWithFlags_Flags[q19] > 0 ->
         sum([toInt(q22 <= s_ExplicitWithRepetition_Flag) *
              toInt(s_ExplicitWithRepetition_Values[q22] = s_ExplicitWithFlags_Values[q19])
                  | q22 : int(1..2 * (1 + (n - 1)) * 2)])
         =
         sum([toInt(s_ExplicitWithFlags_Values[q20] = s_ExplicitWithFlags_Values[q19]) *
              s_ExplicitWithFlags_Flags[q20]
                  | q20 : int(1..2 * (1 + (n - 1)))])
             | q19 : int(1..2 * (1 + (n - 1)))])

