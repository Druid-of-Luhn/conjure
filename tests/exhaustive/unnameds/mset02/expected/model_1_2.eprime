language ESSENCE' 1.0

given n: int
find s_ExplicitWithFlags_Flags: matrix indexed by [int(1..2 * n)] of int(0..2)
find s_ExplicitWithFlags_Values: matrix indexed by [int(1..2 * n)] of int(1..n)
find s_ExplicitWithRepetition_Flag: int(0..2 * n * 2)
find s_ExplicitWithRepetition_Values: matrix indexed by [int(1..2 * n * 2)] of int(1..n)
such that
    and([[sum([toInt(s_ExplicitWithFlags_Values[q25] =
                     [q2, q1 + 1, q1; int(0..2)][toInt(q2 = q1) + 2 * toInt(q2 = q1 + 1)])
               * s_ExplicitWithFlags_Flags[q25]
                   | q25 : int(1..2 * n)])
              | q2 : int(1..n)]
         <=lex
         [sum([toInt(s_ExplicitWithFlags_Values[q27] = q2) * s_ExplicitWithFlags_Flags[q27] | q27 : int(1..2 * n)])
              | q2 : int(1..n)]
             | q1 : int(1..n - 1)]),
    and([s_ExplicitWithFlags_Flags[q3 + 1] > 0 -> s_ExplicitWithFlags_Values[q3] < s_ExplicitWithFlags_Values[q3 + 1]
             | q3 : int(1..2 * n - 1)]),
    and([s_ExplicitWithFlags_Flags[q4] = 0 -> s_ExplicitWithFlags_Values[q4] = 1 | q4 : int(1..2 * n)]),
    and([s_ExplicitWithFlags_Flags[q5 + 1] > 0 -> s_ExplicitWithFlags_Flags[q5] > 0 | q5 : int(1..2 * n - 1)]),
    and([q9 + 1 <= s_ExplicitWithRepetition_Flag ->
         s_ExplicitWithRepetition_Values[q9] <= s_ExplicitWithRepetition_Values[q9 + 1]
             | q9 : int(1..2 * n * 2 - 1)]),
    and([q10 > s_ExplicitWithRepetition_Flag -> s_ExplicitWithRepetition_Values[q10] = 1 | q10 : int(1..2 * n * 2)]),
    and([q12 <= s_ExplicitWithRepetition_Flag ->
         sum([toInt(q15 <= s_ExplicitWithRepetition_Flag) *
              toInt(s_ExplicitWithRepetition_Values[q15] = s_ExplicitWithRepetition_Values[q12])
                  | q15 : int(1..2 * n * 2)])
         <= 2
             | q12 : int(1..2 * n * 2)]),
    and([q17 <= s_ExplicitWithRepetition_Flag ->
         sum([toInt(q20 <= s_ExplicitWithRepetition_Flag) *
              toInt(s_ExplicitWithRepetition_Values[q20] = s_ExplicitWithRepetition_Values[q17])
                  | q20 : int(1..2 * n * 2)])
         =
         sum([toInt(s_ExplicitWithFlags_Values[q18] = s_ExplicitWithRepetition_Values[q17]) *
              s_ExplicitWithFlags_Flags[q18]
                  | q18 : int(1..2 * n)])
             | q17 : int(1..2 * n * 2)]),
    and([s_ExplicitWithFlags_Flags[q21] > 0 ->
         sum([toInt(q24 <= s_ExplicitWithRepetition_Flag) *
              toInt(s_ExplicitWithRepetition_Values[q24] = s_ExplicitWithFlags_Values[q21])
                  | q24 : int(1..2 * n * 2)])
         =
         sum([toInt(s_ExplicitWithFlags_Values[q22] = s_ExplicitWithFlags_Values[q21]) * s_ExplicitWithFlags_Flags[q22]
                  | q22 : int(1..2 * n)])
             | q21 : int(1..2 * n)])

