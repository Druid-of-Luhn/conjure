language ESSENCE' 1.0

find x_ExplicitVarSizeWithFlags_Flags: matrix indexed by [int(1..4)] of bool
find x_ExplicitVarSizeWithFlags_Values:
        matrix indexed by [int(1..4)] of int(1..4)
find x_Occurrence: matrix indexed by [int(1..4)] of bool
such that
    or([x_ExplicitVarSizeWithFlags_Flags[q4] /\
        x_ExplicitVarSizeWithFlags_Values[q4] = 1
            | q4 : int(1..4)]),
    or([x_ExplicitVarSizeWithFlags_Flags[q5] /\
        x_ExplicitVarSizeWithFlags_Values[q5] = 2
            | q5 : int(1..4)]),
    or([x_ExplicitVarSizeWithFlags_Flags[q6] /\
        x_ExplicitVarSizeWithFlags_Values[q6] = 3
            | q6 : int(1..4)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q1 + 1] ->
         x_ExplicitVarSizeWithFlags_Values[q1] <
         x_ExplicitVarSizeWithFlags_Values[q1 + 1]
             | q1 : int(1..3)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q1] = false ->
         x_ExplicitVarSizeWithFlags_Values[q1] = 1
             | q1 : int(1..4)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q1 + 1] ->
         x_ExplicitVarSizeWithFlags_Flags[q1]
             | q1 : int(1..3)]),
    sum([x_ExplicitVarSizeWithFlags_Flags[q1] | q1 : int(1..4)]) <= 4,
    sum([x_Occurrence[q2] | q2 : int(1..4)]) <= 4,
    and([x_Occurrence[q3] ->
         or([x_ExplicitVarSizeWithFlags_Flags[q8] /\
             x_ExplicitVarSizeWithFlags_Values[q8] = q3
                 | q8 : int(1..4)])
             | q3 : int(1..4)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q9] ->
         x_Occurrence[x_ExplicitVarSizeWithFlags_Values[q9]]
             | q9 : int(1..4)])

