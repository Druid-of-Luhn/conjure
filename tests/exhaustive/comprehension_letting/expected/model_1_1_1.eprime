language ESSENCE' 1.0

find x_Occurrence: matrix indexed by [int(0..3)] of bool
find z: int(-100..100)
find aux1: int(-1..5)
such that
    and([x_Occurrence[i] /\ x_Occurrence[j] -> i + j - 1 <= aux1
             | i : int(0..3), j : int(0..3), (i + j) % 2 = 0]),
    or([x_Occurrence[i] /\ x_Occurrence[j] /\ i + j - 1 = aux1
            | i : int(0..3), j : int(0..3), (i + j) % 2 = 0]),
    z = aux1

