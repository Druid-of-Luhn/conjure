language ESSENCE' 1.0

find x_Occurrence: matrix indexed by [int(2..5)] of bool
find x_ExplicitVarSizeWithFlags_Flags: matrix indexed by [int(1..4)] of bool
find x_ExplicitVarSizeWithFlags_Values:
        matrix indexed by [int(1..4)] of int(2..5)
find y_Occurrence: matrix indexed by [int(2..5)] of bool
such that
    and([x_Occurrence[i] /\ y_Occurrence[j] -> i + 2 = j
             | i : int(2..5), j : int(2..5)]),
    1 <= sum([x_Occurrence[q1] | q1 : int(2..5)]),
    1 <= sum([y_Occurrence[q2] | q2 : int(2..5)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q3 + 1] ->
         x_ExplicitVarSizeWithFlags_Values[q3] <
         x_ExplicitVarSizeWithFlags_Values[q3 + 1]
             | q3 : int(1..3)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q3] = false ->
         x_ExplicitVarSizeWithFlags_Values[q3] = 2
             | q3 : int(1..4)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q3 + 1] ->
         x_ExplicitVarSizeWithFlags_Flags[q3]
             | q3 : int(1..3)]),
    1 <= sum([x_ExplicitVarSizeWithFlags_Flags[q3] | q3 : int(1..4)]),
    and([x_ExplicitVarSizeWithFlags_Flags[q5] ->
         x_Occurrence[x_ExplicitVarSizeWithFlags_Values[q5]]
             | q5 : int(1..4)]),
    and([x_Occurrence[q4] ->
         or([x_ExplicitVarSizeWithFlags_Flags[q7] /\
             x_ExplicitVarSizeWithFlags_Values[q7] = q4
                 | q7 : int(1..4)])
             | q4 : int(2..5)])

